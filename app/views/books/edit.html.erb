<div class="card-list-container py-5">
  <% @books.each do |book| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to book_path(book.id) do %>
      <%= image_tag post_image.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag book.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(book_path(book.id), class:"text-dark") do %>
              <strong><i class="fa-regular fa-flag"></i><span> <%= book.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= book.caption %></p>
          <span><i class="fa-solid fa-user"></i> By <%= book.user.name %> ｜ </span>
          <span><%= link_to "#{book.post_comments.count} コメント", book_path(book.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @books %>
</div>