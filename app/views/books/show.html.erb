<main>
  <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @book.user.get_profile_image(100, 100) %> <!-- 投稿者の画像を表示 -->
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with(model: @book_new, local: true) do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <label for="book_opinion">Opinion</label>
                <%= f.text_area :body, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit "Create Book", class: "btn btn-success" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>

          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <%= form_with(model: @book, local: true) do |f| %>
              <table class="table">
                <tbody>
                  <tr>
                    <!-- 投稿者の画像 -->
                    <td class="d-flex align-items-center">
                      <% if @user && @user.get_profile_image(50, 50) %>
                        <%= image_tag @user.get_profile_image(50, 50), class: "rounded-circle mr-3" %>
                      <% else %>
                        <%= image_tag "no_image.jpg", class: "rounded-circle mr-3" %> <!-- 代わりの画像を表示 -->
                      <% end %>
                    </td>
            
                  <!-- タイトル -->
                  <td>
                    <%= f.text_field :title, class: "form-control form-control border-0" %>
                  </td>
            
                  <!-- オピニオン (内容) -->
                  <td>
                    <%= f.text_area :body, class: "form-control form-control border-0" %>
                  </td>
            
                  <!-- 編集ボタン -->
                  <% if @book.id.present? %>
                    <td>
                      <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
                    </td>
                  <% end %>
            
                  <!-- 削除ボタン -->
                  <% if @book.id.present? %>
                    <td>
                      <%= link_to 'Destroy', @book, method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger" %>
                    </td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          <% end %>
        </div>
      </main>