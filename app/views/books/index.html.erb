<div class="container">
  <div class="row">
    <div class='col-md-3'>
      <%= render 'book', user: current_user, book_new: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <!-- 投稿者の画像を表示 -->
              <td class="d-flex align-items-center justify-content-start">
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(80,80), class: "rounded-circle mr-2" %>
              <% end %>
              </td>
              <!-- タイトルを表示 -->
              <td><%= link_to book.title, book_path(book) %></td>
              <!-- 本の内容を表示 -->
              <td><%= book.body %></td>
              <td colspan="3"></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
