
<div class='container px-5 px-sm-0'>
      <div class='row'>
      <div class='col-md-3'>
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class='table'>
          <th>name</th>
          <th></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>
      </table>

    <div class='row'>
      <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

    <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
            <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <td><%= link_to 'Create Book', edit_book_path(@user.id), method: :post, class: 'btn btn-success' %></td>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>