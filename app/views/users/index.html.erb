 User index
<div class="container">
  <div class="row">
    <div class='col-md-3'>
      <%= render 'books/book', user: @user, book_new: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-inverse' >
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <!-- 投稿者の画像を表示 -->
              <td class="">
                <%= image_tag book.user.get_profile_image(80,80), class: "rounded-circle mr-2" %>
              </td>
              <td>
                <%= book.user.name %>
              </td>
              <td>
                <%= link_to 'Show', user_path(book.user.id), class: "btn-outline-info out" %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>