 <!-- ユーザーの詳細 -->
<html>
  <main>
        <div class='container px-5 px-sm-0'>
          <div class='row'>
            <div class='col-md-3'>
              <h2>User info</h2>
                <% if @user.present? %>
                  <%= image_tag @user.get_profile_image(100,100) %>
                <% else %>
                  <%= image_tag "default_profile_image.jpg" %> <no_image.jpg>
                <% end %>
                    <table class='table'>
                      <tr>
                        <th>name</th>
                        <th></th>
                      </tr>
                      <tr>
                        <th>introduction</th>
                        <th></th>
                      </tr>
                    </table>
              <div class='row'>
                <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
                  <i class="fas fa-user-cog"></i>
                <% end %>
            </div>

              <h2 class="mt-3">New book</h2>
                <div class="form-group">
                  <label for="book_title">Title</label>
                  <input class="form-control book_title" type="text" name="book[title]" id="book_title" />
                </div>
                <div class="form-group">
                  <label for="book_opinion">Opinion</label>
                  <textarea class="form-control book_body" name="book[body]" id="book_opinion"></textarea>
                </div>
                <div class="form-group">
                  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
                </div>
          </div>
                  <div class='col-md-8 offset-md-1'>
                    <h2>Books</h2>
                    <table class='table table-hover table-inverse'>
                      <thead>
                        <tr>
                        <th></th>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                        </tr>
                      </thead>
                    </table>
                  </div>
        </div>
  </main>
</html>

