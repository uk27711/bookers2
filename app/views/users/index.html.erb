<html>
  <main>
  <%= render 'books/book', user: current_user, book_new: @book_new %>
                  <div class='col-md-8 offset-md-4'>
                    <h2>Users</h2>
                    <table class='table table-hover table-inverse'>
                      <thead>
                        <tr>
                        <th></th>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                        </tr>
                      </thead>
                      <% @books.each do |book| %>
                        <tbody>
                        <tr>
                        <!-- 投稿者の画像を表示 -->
                        <td class="d-flex align-items-center justify-content-start">
                          <%= image_tag @user.get_profile_image(80,80), class: "rounded-circle mr-2" %>
                          <td><%= link_to book.title, book_path(book) %></td>
                          </td>
                          <td><%= book.body %></td>
                          <td colspan="3"></td>
                        </tr>
                        </tbody>
                      <% end %>
                    </table>
                  </div>
                  </div>
                  </div>
                  </main>
              </html>
